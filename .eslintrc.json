{
	"root": true,
	"extends": [
		"wikimedia/client",
		"wikimedia/jquery",
		"wikimedia/mediawiki"
	],
	"env": {
		"browser": true,
		"jquery": true
	},
	"globals": {
		"mediaWiki": false
	},
	"rules": {
		"no-jquery/no-class-state": "warn",
		"no-jquery/no-global-selector": "warn",
		"no-jquery/no-done-fail": "warn",
		"prefer-const": "warn"
	}
}
